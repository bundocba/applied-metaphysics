	<field name="unsubscribe_fromname" type="text" label="RSM_CONF_MESSAGE_FROMNAME" description="RSM_CONF_MESSAGE_FROMNAME_DESC" size="50" class="input-xlarge" default="" />
	<field name="unsubscribelink_fromname" type="text" label="RSM_CONF_MESSAGE_FROMNAME" description="RSM_CONF_MESSAGE_FROMNAME_DESC" size="50" class="input-xlarge" default="" />
	
	<field name="confirmation_subject" type="text" label="RSM_CONF_MESSAGE_SUBJECT" description="RSM_CONF_MESSAGE_SUBJECT_DESC" size="50" class="input-xlarge" default="" />
	<field name="unsubscribe_subject" type="text" label="RSM_CONF_MESSAGE_SUBJECT" description="RSM_CONF_MESSAGE_SUBJECT_DESC" size="50" class="input-xlarge" default="" />
	<field name="unsubscribelink_subject" type="text" label="RSM_CONF_MESSAGE_SUBJECT" description="RSM_CONF_MESSAGE_SUBJECT_DESC" size="50" class="input-xlarge" default="" />
	
	<field name="confirmation_mode" type="radio" class="btn-group" label="RSM_CONF_MESSAGE_MODE" description="RSM_CONF_MESSAGE_MODE_DESC" default="1">
		<option value="0">TEXT</option>
		<option value="1">HTML</option>
	</field>
	<field name="unsubscribe_mode" type="radio" class="btn-group" label="RSM_CONF_MESSAGE_MODE" description="RSM_CONF_MESSAGE_MODE_DESC" default="1">
		<option value="0">TEXT</option>
		<option value="1">HTML</option>
	</field>
	<field name="unsubscribelink_mode" type="radio" class="btn-group" label="RSM_CONF_MESSAGE_MODE" description="RSM_CONF_MESSAGE_MODE_DESC" default="1">
		<option value="0">TEXT</option>
		<option value="1">HTML</option>
	</field>
	
	<field name="confirmation_message" type="editor" class="inputbox" label="" description="" filter="JComponentHelper::filterText" buttons="true" />
	<field name="unsubscribe_message" type="editor" class="inputbox" label="" description="" filter="JComponentHelper::filterText" buttons="true" />
	<field name="unsubscribelink_message" type="editor" class="inputbox" label="" description="" filter="JComponentHelper::filterText" buttons="true" />
	<field name="thankyou_message" type="editor" class="inputbox" label="" description="" filter="JComponentHelper::filterText" buttons="true" />
	
