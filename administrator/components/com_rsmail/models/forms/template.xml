<?xml version="1.0" encoding="utf-8"?>
<form>
	<field name="IdTemplate" type="hidden" label="" description="" size="10" default="0" readonly="true" />
	<field name="TemplateName" type="text" class="input-xxlarge" label="RSM_TEMPLATE_NAME" description="RSM_TEMPLATE_NAME_DESC" size="50" />
	<field name="MessageSenderEmail" type="email" class="input-xlarge" label="RSM_FROM_EMAIL_MESSAGE" description="RSM_FROM_EMAIL_MESSAGE_DESC" required="true" size="50" validate="email" />
	<field name="MessageSenderName" type="text" class="input-xlarge" label="RSM_FROM_NAME_MESSAGE" description="RSM_FROM_NAME_MESSAGE_DESC" required="true" size="50" />
	<field name="MessageReplyTo" type="email" class="input-xlarge" label="RSM_REPLY_TO_MESSAGE" description="RSM_REPLY_TO_MESSAGE_DESC" size="50" validate="email" />
	<field name="MessageReplyToName" type="text" class="input-xlarge" label="RSM_REPLY_TO_NAME" description="RSM_REPLY_TO_NAME_DESC" size="50" />
	<field name="MessageType" type="radio" class="btn-group" label="RSM_TEMPLATE_MODE" description="RSM_TEMPLATE_MODE_DESC" size="50" default="1">
		<option value="0">TEXT</option>
		<option value="1">HTML</option>
	</field>
	<field name="TemplateBody" type="editor" class="inputbox" label="RSM_TEMPLATE_HTML_BODY" description="RSM_TEMPLATE_HTML_BODY_DESC" filter="JComponentHelper::filterText" buttons="true" required="true" />
	<field name="TemplateText" type="textarea" cols="90" rows="20" class="input-xxlarge" label="RSM_TEMPLATE_TEXT_BODY" description="RSM_TEMPLATE_TEXT_BODY_DESC" />
</form>