<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<extension version="2.5" type="module" client="site" method="upgrade">
	<name>Community - JomSocial Facebook Likebox</name>
	<author>JomSocial Team</author>
	<creationDate>Jan 2013</creationDate>
	<copyright>Copyright (C) 2010 JomSocial - All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>support@jomsocial.com</authorEmail>
	<authorUrl>http://www.jomsocial.com</authorUrl>	
	<version>2.0</version>
	<description>Adds a module on your site that displays a like box</description>
	<files>
		<filename module="mod_jomsocial_fb_likebox">mod_jomsocial_fb_likebox.php</filename>
		<filename>mod_jomsocial_fb_likebox.xml</filename>
	</files>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="facebookid" type="text" default="29952106698" label="Facebook Page ID" />
		<param name="width" type="text" default="300" label="Width" description="Set the application width" />
		<param name="height" type="text" default="300" label="Height" description="Set the application height" />
		<param name="connections" type="text" default="10" label="Connections" />
		<param name="showStream" type="list" default="true" label="Show Stream" description="Show or hide the stream">
			<option value="true">Yes</option>
			<option value="false">No</option>
		</param>
		<param name="showHeader" type="list" default="true" label="Show Header" description="Show or hide the header">
			<option value="true">Yes</option>
			<option value="false">No</option>
		</param>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
				<field name="facebookid" type="text" default="29952106698" label="Facebook Page ID" />
				<field name="width" type="text" default="300" label="Width" description="Set the application width" />
				<field name="height" type="text" default="300" label="Height" description="Set the application height" />
				<field name="connections" type="text" default="10" label="Connections" />
				<field name="showStream" type="list" default="true" label="Show Stream" description="Show or hide the stream">
					<option value="true">Yes</option>
					<option value="false">No</option>
				</field>
				<field name="showHeader" type="list" default="true" label="Show Header" description="Show or hide the header">
					<option value="true">Yes</option>
					<option value="false">No</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>